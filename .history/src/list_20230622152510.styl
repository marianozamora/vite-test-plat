//480,768,1024
sm = 468px
md = 768px
lg = 1024px

body
    background: inherit

@media screen and (min-width: sm)
    body
        background: inherit
    .list__pokemons
        display: inline-block
        //flex-direction: column
        &__element
            columns-count 1

@media screen and (min-width: md)
    body
        background: peru
     .list__pokemons
        display: flex
        flex-direction: row
        &__element
            width: 50%

@media screen and (min-width: lg)
    body
        background: skyblue
     .list__pokemons
        display: flex
        &__element
            width:25%

